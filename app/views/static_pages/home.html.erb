            <% p = a[0] if a[0].present? %>
            <%= image_tag p.images.first.image.url %>
            <%= link_to motel_path(p) do %>
              <div class="carousel-caption">
                <h5><%= p.name %></h5>
                <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> <%= p.address %></p>
              </div>
            <% end %>
