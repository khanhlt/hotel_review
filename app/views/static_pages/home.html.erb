      <%= render partial: "static_pages/motel", collection: @motels %>
    </div>
  </div>


</div>

<div id="paginator1">
  <%= paginate @motels, remote: true %>
</div>
<div class="col-md-12 padding_fix" style="margin-top:20px">
  <div class="col-md-12 title-top padding_fix">
