<div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-bottom:80px;">
  <ol class="carousel-indicators">
    <% slider.each_with_index do |photo, index| %>
      <% if index.zero? %>
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <% else %>
        <li data-target="#myCarousel" data-slide-to="#{index}"></li>
      <% end %>
    <% end %>
  </ol>

  <div class="carousel-inner slider_tr_fix">
    <% slider.each_with_index do |photo, index| %>
      <% if index.zero? %>
        <div class="item active">
      <% else %>
        <div class="item">
      <% end %>
      <%= image_tag photo.image.url, height: '400', width: '100%' %>
      </div>
    <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
